<h3 class="text-center">Adding new article</h3>
<div class= "row">
 <div class="col-md-4">
        <%= form_for(@article, :html => {class:"form-horizontal", role:"form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-md-1">
              <%= f.label :title %>
            </div>
            <div class="col-md-11">
            <%= f.text_field :title, class:"form-control", placeholder:"enter title",autofocus:true %>
            </div>
            <div class="control-label col-md-1">
              <%= f.label :body %>
            </div>
            <div class="col-md-11">
              <%= f.text_area :body, rows:10, class:"form-horizontal", placeholder:"Enter body" %>
            </div>
          </div>
          <div class="form-group">
              <div class="col-md-offset-1 col-md-11">
                  <%= f.submit class: "btn btn-primary btn-lg pull-right" %>
              </div>
          </div>
        <% end %>
    </div>
</div>